<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<b:Container>
		<b:Form>
			<b:FieldSet>
		    <b:Legend>Login form</b:Legend>
		
		 	<b:FormGroup>
		      <b:FormLabel for="formName">Name</b:FormLabel>
		      <b:TextBox ui:field="userName" placeholder="blabla" b:id="formName"/>
		    </b:FormGroup>
		    
		    <b:FormGroup>
		      <b:FormLabel for="formPassword">Password</b:FormLabel>
		      <b:Input ui:field="userPass" type="PASSWORD" b:id="formPassword"/>
		    </b:FormGroup>
		
		    <b:Button ui:field="btnConfirm" type="PRIMARY">Send</b:Button>
		  </b:FieldSet>
		</b:Form>
	</b:Container>
</ui:UiBinder> 
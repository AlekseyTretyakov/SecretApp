<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<b:Container b:id="chat-container">
		<b:Panel type="INFO">
		  <b:PanelHeader>
		    <b:Heading size="H3" text="Secret Chat"/>
		  </b:PanelHeader>
		  <b:PanelBody ui:field="msgBlock" b:id="chat-body">
   		  </b:PanelBody>
		  <b:PanelFooter>
		  	<b:Row>
		  		<b:Column size="MD_10">
		  			<!-- <b:TextBox ui:field="textBox" placeholder="Message text" autoComplete="false"/> -->
		  			<b:Row>
		  				<b:Column size="MD_12">
		  					<b:TextBox ui:field="textBox" placeholder="Message text" autoComplete="false"/>
		  				</b:Column>
		  				<b:Column size="MD_12">
		  					<b.html:Span ui:field="userList"></b.html:Span>
		  				</b:Column>
		  			</b:Row>
			  	</b:Column>
			  	<b:Column size="MD_2">
			    	<b:Button ui:field="sendBtn" type="PRIMARY" enabled="false" b:id="sendBtn">Send</b:Button>
			    	<b:Button ui:field="getMsg" type="WARNING">Get</b:Button>
		    	</b:Column>
		    </b:Row>
		  </b:PanelFooter>
		</b:Panel>
	</b:Container>
</ui:UiBinder> 
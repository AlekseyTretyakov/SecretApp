<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<b:Container>
		<b:Panel type="INFO">
		  <b:PanelHeader>
		    <b:Heading size="H3" text="Secret Chat"/>
		  </b:PanelHeader>
		  <b:PanelBody ui:field="msgBlock">
		  	<g:Label text="Body Chat"/>
   		  </b:PanelBody>
		  <b:PanelFooter>
		  	<b:Row>
		  		<b:Column size="MD_11">
			  		<b:TextBox ui:field="textBox" placeholder="Message text" autoComplete="false"/>
			  	</b:Column>
			  	<b:Column size="MD_1">
			    	<b:Button ui:field="sendBtn" type="PRIMARY">Send</b:Button>
		    	</b:Column>
		    </b:Row>
		  </b:PanelFooter>
		</b:Panel>
	</b:Container>
</ui:UiBinder> 